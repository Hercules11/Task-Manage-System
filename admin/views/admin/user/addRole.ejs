<!DOCTYPE html>
<html>
  
  <head>
    <meta charset="UTF-8">
    <title>用户角色权限添加页面</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="stylesheet" href="/static/css/font.css">
		<link rel="stylesheet" href="/static/css/weadmin.css">    
  </head>
  
  <body>
    <div class="weadmin-body" action="/admin/user/roleList/add_role" method="POST">
        <form class="layui-form">            
          <div class="layui-form-item">
              <label for="role_name" class="layui-form-label">
                  <span class="we-red">*</span>角色名称
              </label>
              <div class="layui-input-inline">
                  <input type="text" id="role_name" name="role_name" required="" lay-verify="required"
                  autocomplete="off" value="" class="layui-input">
              </div>
          </div>
          <div class="layui-form-item">
            <label for="first" class="layui-form-label">
                <span class="we-red">*</span>第一权限
            </label>
            <div class="layui-input-inline">
                <input type="text" id="first" name="first" required="" lay-verify="required"
                autocomplete="off" value="" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
          <label for="second" class="layui-form-label">
              <span class="we-red"></span>第二权限
          </label>
          <div class="layui-input-inline">
              <input type="text" id="second" name="second" required="" 
              autocomplete="off" value="" class="layui-input">
          </div>
      </div>
      <div class="layui-form-item">
        <label for="third" class="layui-form-label">
            <span class="we-red"></span>第三权限
        </label>
        <div class="layui-input-inline">
            <input type="text" id=third" name="third" required="" 
            autocomplete="off" value="" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
      <label for="fourth" class="layui-form-label">
          <span class="we-red"></span>第四权限
      </label>
      <div class="layui-input-inline">
          <input type="text" id="fourth" name="fourth" required="" 
          autocomplete="off" value="" class="layui-input">
      </div>
  </div>
          <div class="layui-form-item">
              <label for="L_repass" class="layui-form-label">
              </label>
              <button  class="layui-btn" lay-filter="add" lay-submit="">
                  确认
              </button>
          </div>
      </form>
    </div>
		<script src="/lib/layui/layui.js" charset="utf-8"></script>
    <script type="text/javascript">
    	layui.extend({
				admin: '{/}/static/js/admin'
			});
	    layui.use(['form','layer','admin','upload','jquery','laydate'], function(){
	      var form = layui.form,
	      	admin = layui.admin,
            layer = layui.layer,
            laydate = layui.laydate,
            upload = layui.upload;
            var $ = layui.jquery;
          //监听提交
          form.on('submit(add)', function(data){
            console.log(data);
            //发异步，把数据提交给php
            //用ajax提交数据
            $.ajax({
                url : "/admin/user/roleList/add_role",
                method : "post",
                data : data.field
            }).then(function(){
                layer.alert("添加成功", {icon: 6},function () {
                // 获得frame索引
                var index = parent.layer.getFrameIndex(window.name);
                //关闭当前frame
                parent.layer.close(index);
                //将iframe的上一层进行刷新
                window.parent.location.reload()
            });
            })
            return false;
          });
        })  
    </script>
    
  </body>

</html>