<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>统计图表-WeAdmin Frame型后台管理系统-WeAdmin 1.0</title>
        <meta name="renderer" content="webkit|ie-comp|ie-stand">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
        <meta http-equiv="Cache-Control" content="no-siteapp" />
		<link rel="stylesheet" href="/static/css/font.css">
		<link rel="stylesheet" href="/static/css/weadmin.css">
    </head>
    <body>
        <div class="weadmin-body">
            <div style="padding: 20px; background-color: #F2F2F2;">
                <div class="layui-row layui-col-space15">
                  <div class="layui-col-md3">
                    <div class="layui-card">
                      <div class="layui-card-header">用户总数</div>
                      <div class="layui-card-body">
                        <h3 style="display: inline;">现有用户总数: <h2 style="display: inline;"><%-options.count1%></h2></h3>
                      </div>
                    </div>
                  </div>
                  <div class="layui-col-md3">
                    <div class="layui-card">
                      <div class="layui-card-header">设备总量</div>
                      <div class="layui-card-body">
                        <h3 style="display: inline;">现有设备总量: <h2 style="display: inline;"><%-options.count2%></h2></h3>
                      </div>
                    </div>
                  </div>
                  <div class="layui-col-md3">
                    <div class="layui-card">
                      <div class="layui-card-header">维护标准</div>
                      <div class="layui-card-body">
                        <h3 style="display: inline;">现有维护标准: <h2 style="display: inline;"><%-options.count3%></h2></h3>
                      </div>
                    </div>
                  </div>
                  <div class="layui-col-md3">
                    <div class="layui-card">
                      <div class="layui-card-header">维护计划</div>
                      <div class="layui-card-body">
                        <h3 style="display: inline;">现有维护计划: <h2 style="display: inline;"><%-options.count4%></h2></h3>
                      </div>
                    </div>
                  </div>
                </div>
            </div>
            <!-- 为 ECharts 准备一个具备大小（宽高）的 DOM -->
            <div style="width: 100%;height:300px; background-color: #F2F2F2;">
                <div id="main1" style="width: 33.3%;height:300px;float:left; ">
                </div>
                <div id="main2" style="width: 33.3%;height:300px;float:left;">
                </div>
                <div id="main3" style="width: 33.3%;height:300px;float:left;">
                </div>
            </div>
            <div style="width: 100%;height:300px; background-color: #F2F2F2;">
                <div id="main" style="width: 100%;height:300px;">
                </div>
            </div>
        </div>
        <script src="//cdn.bootcss.com/echarts/4.0.2/echarts.min.js"></script>
        <script type="text/javascript">
        // 基于准备好的dom，初始化echarts实例
        var myChart = echarts.init(document.getElementById('main'));
        var myChart1 = echarts.init(document.getElementById('main1'));
        var myChart2 = echarts.init(document.getElementById('main2'));
        var myChart3 = echarts.init(document.getElementById('main3'));

        // 指定图表的配置项和数据
        var option = {
            title: {
                text: '隐患次数/设备数',
                subtext:'分型号,按月统计'
            },
            tooltip: {
                trigger: 'axis'
            },
            legend: {
                data:['SQ38A型','SQ37A型','SQ36A型','SQ35A型','SQ37型']
            },
            grid: {
                left: '10%',
                right: '10%',
                bottom: '10%',
                containLabel: true
            },
            toolbox: {
                feature: {
                    saveAsImage: {}
                }
            },
            xAxis: {
                type: 'category',
                boundaryGap: false,
                data: ['2019-10','2019-11','2019-12','2010-01','2020-02','2020-03','2020-04']
            },
            yAxis: {
                type: 'value'
            },
            series: [
                {
                    name:'SQ38A型',
                    type:'line',
                    stack: '总量',
                    data:[0.10, 0.11, 0.10, 0.15, 0.19, 0.21, 0.12]
                },
                {
                    name:'SQ37A型',
                    type:'line',
                    stack: '总量',
                    data:[0.21, 0.10, 0.15, 0.12, 0.20, 0.10, 0.23]
                },
                {
                    name:'SQ36A型',
                    type:'line',
                    stack: '总量',
                    data:[0.10, 0.12, 0.21, 0.12, 0.15, 0.13, 0.14]
                },
                {
                    name:'SQ35A型',
                    type:'line',
                    stack: '总量',
                    data:[0.13, 0.22, 0.11, 0.14, 0.13, 0.13, 0.10]
                },
                {
                    name:'SQ37型',
                    type:'line',
                    stack: '总量',
                    data:[0.18, 0.19, 0.19, 0.19, 0.12, 0.11, 0.11]
                }
            ]
        };
        var option1 = {
    title: {
        text: '故障类别',
        left: 'left'
    },
    tooltip: {
        trigger: 'item',
        formatter: '{a} <br/>{b} : {c} ({d}%)'
    },
    legend: {
        orient: 'vertical',
        left: 'right',
        data: ['物料原因', '机械故障', '电气故障']
    },
    grid: {
                left: '10%',
                right: '10%',
                bottom: '10%',
                containLabel: true
            },
    series: [
        {
            name: '故障类别',
            type: 'pie',
            radius: '55%',
            center: ['50%', '60%'],
            data: [
                {value: 35, name: '物料原因'},
                {value: 10, name: '机械故障'},
                {value: 34, name: '电气故障'}
            ],
            emphasis: {
                itemStyle: {
                    shadowBlur: 10,
                    shadowOffsetX: 0,
                    shadowColor: 'rgba(0, 0, 0, 0.5)'
                }
            }
        }
    ]
};
        var option2 = {
    title: {
        text: '故障原因',
        left: 'left'
    },
    tooltip: {
        trigger: 'item',
        formatter: '{a} <br/>{b} : {c} ({d}%)'
    },
    legend: {
        orient: 'vertical',
        left: 'right',
        data: ['维护保养不到位', '自然磨损', '违规操作', '设备质量问题']
    },
    grid: {
                left: '10%',
                right: '10%',
                bottom: '10%',
                containLabel: true
            },
    series: [
        {
            name: '故障原因',
            type: 'pie',
            radius: '55%',
            center: ['50%', '60%'],
            data: [
                {value: 35, name: '维护保养不到位'},
                {value: 10, name: '自然磨损'},
                {value: 34, name: '违规操作'},
                {value: 34, name: '设备质量问题'}
            ],
            emphasis: {
                itemStyle: {
                    shadowBlur: 10,
                    shadowOffsetX: 0,
                    shadowColor: 'rgba(0, 0, 0, 0.5)'
                }
            }
        }
    ]
};
        var option3 = {
    title: {
        text: '故障等级分类',
        left: 'left'
    },
    tooltip: {
        trigger: 'item',
        formatter: '{a} <br/>{b} : {c} ({d}%)'
    },
    legend: {
        orient: 'vertical',
        left: 'right',
        data: ['立即处理', '当日解决', '计划维修']
    },
    grid: {
                left: '10%',
                right: '10%',
                bottom: '10%',
                containLabel: true
            },
    series: [
        {
            name: '等级分类',
            type: 'pie',
            radius: '55%',
            center: ['50%', '60%'],
            data: [
                {value: 3, name: '立即处理'},
                {value: 1, name: '当日解决'},
                {value: 3, name: '计划维修'}
            ],
            emphasis: {
                itemStyle: {
                    shadowBlur: 10,
                    shadowOffsetX: 0,
                    shadowColor: 'rgba(0, 0, 0, 0.5)'
                }
            }
        }
    ]
};
        // 使用刚指定的配置项和数据显示图表。
        myChart.setOption(option);
        myChart1.setOption(option1);
        myChart2.setOption(option2);
        myChart3.setOption(option3);
    </script>
    </body>
</html>